@model Exercicio_MVC_PersonagemJogo.Models.Personagem

<h2>Cadastrar Personagem</h2>

<form asp-action="Criar">
    <label>Nome:</label>
    <input type="text" name="CNome" class="form-control"

    <label>Nivel</label>
    <input type="number" name="CNivel" class="form-control" step="0.01"> @*step -> controla casas decimais*@

    <label>Classe:</label>
    <select name="QClasse" class="form-control">
        <option value="Mago">Mago</option>
        <option value="Guerreiro">Guerreiro</option>
    
    </select>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>